{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["security"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "security/detect-object-injection": "warn",
    "security/detect-non-literal-require": "error",
    "security/detect-non-literal-fs-filename": "error"
  }
}